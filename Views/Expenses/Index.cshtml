@model IEnumerable<learn_dotnet_core_mvc_webapp.Models.Expense>

<h2>My Expense</h2>
<div class="container">
    <table class="table table-borderd">
        <thead class="table-light">
            <tr>
                <th>Description</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Description</td>
                    <td>@item.Amount</td>
                    <td>@item.Category</td>
                    <td>@item.Date</td>
                </tr>
            }
        </tbody>
    </table>
</div>